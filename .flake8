[flake8]
max-line-length = 88
max-complexity = 10
select = B,C,E,F,W
count = True
statistics = True
ignore =
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D107,
    E203,
    E501,
    E701,
    E704,
    W503,
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
